<div class="shift_30">
    <form class="display helpers form-horizontal" action="" method="POST">
      <fieldset>
        <div class="control-group">
          <label class="control-label" for="active">Active</label>
          <div class="controls">
              <input type="checkbox" {% if (reseller.isEnabled == true) and ( reseller.isDeleted == false) and (reseller.status.name == "Active")  %} checked {% endif %} disabled="disabled" />
            <span class="help-inline"><a href="#" rel="tooltip" data-placement="right" title="Account is active, members, artists and songs are active."><i class="icon-info-sign"></i></a></span>  
          </div>
        </div> 
        <div class="control-group">
          <label class="control-label" for="active">Locked</label>
          <div class="controls">
              <input type="checkbox" {% if (reseller.isEnabled == false) and (reseller.isDeleted == false) %} checked {% endif %} disabled="disabled" />
            <span class="help-inline"><a href="#" rel="tooltip" data-placement="right" title="Account is locked, members, artists and songs are inactive."><i class="icon-info-sign"></i></a></span>  
          </div>
        </div> 
        <div class="control-group">
          <label class="control-label" for="active">Deleted</label>
          <div class="controls">
              <input type="checkbox" {% if (reseller.isDeleted == true) and (reseller.isEnabled == false) %} checked {% endif %} disabled="disabled" />
            <span class="help-inline"><a href="#" rel="tooltip" data-placement="right" title="Account has been deleted, members, artists and songs also deleted."><i class="icon-info-sign"></i></a></span>  
          </div>
        </div> 
      </fieldset>
    </form>
</div>        
