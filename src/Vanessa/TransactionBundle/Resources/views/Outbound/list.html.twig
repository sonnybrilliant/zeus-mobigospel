{% extends "VanessaTransactionBundle::layout.html.twig" %}

{% block title %}Manage sms{% endblock %}

{% block body %}
<div class="row">
    <div class="span12">
        <h3 class="align_header">Manage sms</h3>
        <div class="span3">
           {% set vars = {'action': 'List'} %}
           {% include 'VanessaTransactionBundle::breadcrumb.outbound.html.twig' with vars  %}
            </div>
            <div class="span8 pull-right" style="margin-right: -25px">
                <div class="btn-group">
                    <a class="btn btn-inverse dropdown-toggle" data-toggle="dropdown" href="#" title="Download inbound sms list.">
                        <span class="icon-download-alt icon-white"></span>
                        Download                    
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="{{ path('vanessa_transaction_inbound_download_excel') }}.html" title="Download excel document."><i class="icon-file"></i>&nbsp;Excel</a>
                        </li>
                    </ul>    
                </div>
                <form class="form-inline pull-right">
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-filter" ></i></span>
                        <select name="filterBy" class="span2 selectHelper" data-placeholder="filter by" >
                            <option value="0">filter by..</option>
                            <option value="0">All</option>
                            <option value="Queued">Queued</option>
                            <option value="Submitted">Submitted</option>
                            <option value="Acknowledged">Acknowledged</option>
                            <option value="Receipted">Receipted</option>
                            <option value="Expired">Expired</option>
                            <option value="Error">Error</option>
                        </select>
                    </div>
                    <div class="input-prepend input-append">
                        <span class="add-on"><i class="icon-search" ></i></span>
                        <input name="searchText" title="search" type="text" value="search.."  class="input-small search" />
                        <input type="submit" value="GO!" class="btn btn-warning" />
                    </div>
                </form>              
            </div>
        </div>
        <div class="span12 pull-right">
            {% block alert %}
                {% include "::alert.html.twig" %}
            {% endblock %}
            <div class="tabbable"> <!-- Only required for left/right tabs -->
                <ul class="nav nav-tabs">
                    <li><a href="{{ path('vanessa_transaction_inbound_list')}}.html" title="View inbound sms." >Inbound</a></li>
                    <li class="active"><a href="{{ path('vanessa_transaction_outbound_list')}}.html" title="View outbound sms." >Outbound</a></li>
                </ul>            
            </div>
        </div> 
        <div class="span12">
             {% include "VanessaTransactionBundle:Outbound:List/list.table.html.twig" %} 
        </div>
</div>
        
{% endblock body %}


