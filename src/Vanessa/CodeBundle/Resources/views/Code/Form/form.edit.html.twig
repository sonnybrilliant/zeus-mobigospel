<div>
{% block alert %}
    {% include "::alert.html.twig" %}
{% endblock %}    
<form class="display helpers form-horizontal" action="{{ path('vanessa_code_update',{'code':code.code}) }}.html" method="POST" {{ form_enctype(form) }}>
  <fieldset>
      <legend><span class="label label-important">Info</span> <small>All song fields are required.</small></legend>
      <div class="control-group {% if form_errors(form.song) %} error {% endif %}">
        <label class="control-label" for="song">{{ form_label(form.song) }}</label>
        <div class="controls">
          {{ form_widget(form.song) }} 
          <span class="help-inline"><a href="#" rel="tooltip" data-placement="right" data-original-title="Update song."><i class="icon-info-sign"></i></a></span>  
          <span class="help-inline">{{form_errors(form.song)}}</span>  
        </div>
      </div> 
      <div class="control-group {% if form_errors(form.code) %} error {% endif %}">
        <label class="control-label" for="code">{{ form_label(form.code) }}</label>
        <div class="controls">
          {{ form_widget(form.code) }} 
          <span class="help-inline"><a href="#" rel="tooltip" data-placement="right" data-original-title="Edit code."><i class="icon-info-sign"></i></a></span>  
          <span class="help-inline">{{form_errors(form.code)}}</span>  
        </div>
      </div> 
      <div class="form-actions">
          <button type="submit" name="submit" class="btn btn-warning" data-toggle="button">Update &nbsp;&nbsp;<i class="icon-white icon-circle-arrow-right"></i></button>
                    &nbsp;&nbsp;<a href="{{ path('vanessa_code_list') }}.html" class="btn">Cancel</a>
      </div> 
      {{ form_rest(form) }}       
  </fieldset>
</form>
</div>        
     