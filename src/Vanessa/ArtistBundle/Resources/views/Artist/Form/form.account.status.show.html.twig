<div class="shift_30">
    <form class="display helpers form-horizontal" action="" method="POST">
      <fieldset>
        <div class="control-group">
          <label class="control-label" for="active">Active</label>
          <div class="controls">
              <input type="checkbox" {% if (artist.isEnabled == true) and ( artist.isDeleted == false) and (artist.status.name == "Active")  %} checked {% endif %} disabled="disabled" />
            <span class="help-inline"><a href="#" rel="tooltip" data-placement="right" title="Account is active, songs are active."><i class="icon-info-sign"></i></a></span>  
          </div>
        </div> 
        <div class="control-group">
          <label class="control-label" for="active">Locked</label>
          <div class="controls">
              <input type="checkbox" {% if (artist.isEnabled == false) and (artist.isDeleted == false) %} checked {% endif %} disabled="disabled" />
            <span class="help-inline"><a href="#" rel="tooltip" data-placement="right" title="Account is locked, songs are inactive."><i class="icon-info-sign"></i></a></span>  
          </div>
        </div> 
        <div class="control-group">
          <label class="control-label" for="active">Deleted</label>
          <div class="controls">
              <input type="checkbox" {% if (artist.isDeleted == true) and (artist.isEnabled == false) %} checked {% endif %} disabled="disabled" />
            <span class="help-inline"><a href="#" rel="tooltip" data-placement="right" title="Account has been deleted, songs also deleted."><i class="icon-info-sign"></i></a></span>  
          </div>
        </div> 
      </fieldset>
    </form>
</div>        
