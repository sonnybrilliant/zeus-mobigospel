{% extends "VanessaMemberBundle::layout.html.twig" %}

{% block title %}Profile - {{member.fullName}}{% endblock %}

{% block body %}
<div class="row">
    <div class="span12">
        <h3 class="align_header">Profile - {{member.fullName}}</h3>
        <div class="span6">
           {% set vars = {'action': 'Account status'} %}
           {% include 'VanessaMemberBundle::breadcrumb.html.twig' with vars  %}
        </div>
        <div class="span5 pull-right" style="margin-right: -25px">        
            <a href="{{ path('vanessa_member_account_status_edit',{'slug': member.slug })}}.html" class="btn btn-warning pull-right" title="Edit member details."><i class="icon-white icon-edit"></i>&nbsp;Edit member</a>
        </div>
        <div class="span12">
            {% block alert %}
                {% include "::alert.html.twig" %}
            {% endblock %}
            <div class="tabbable"> <!-- Only required for left/right tabs -->
                <ul class="nav nav-tabs">
                    <li><a href="{{ path('vanessa_member_profile',{'slug': member.slug})}}.html" title="Member details" >Member details</a></li>
                    <li class="active"><a href="{{ path('vanessa_member_account_status_show',{'slug': member.slug})}}.html" title="Account status">Account status</a></li>
                </ul>            
            </div>
            <div class="span8">
                {% include "VanessaMemberBundle:Member:Form/form.account.status.show.html.twig" %}
            </div> 
            <div class="span3 pull-right">
             {% include "VanessaMemberBundle:Member:Hint/form.account.status.html.twig" %} 
            </div>      
               
        </div>
    </div>     
</div>     

{% endblock body %}
