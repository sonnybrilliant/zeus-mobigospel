{% extends "VanessaMemberBundle::layout.html.twig" %}

{% block title %}Edit a member{% endblock %}

{% block body %}
<div class="row">
   <div class="span12">
        <h3 class="align_header">Edit a member</h3>
        <div class="span6">
           {% set vars = {'action': 'Edit member'} %}
           {% include 'VanessaMemberBundle::breadcrumb.html.twig' with vars  %}
        </div>
   </div>    
   <div class="span9">
        {% include "VanessaMemberBundle:Member:form.edit.html.twig" %}
   </div> 
   <div class="span3 pull-right">
        <div class="well well-hint">
            <h4><i class="icon-info-sign icon-white"></i>&nbsp; Hint</h4>
            <br />
            <p class="pull-right">
                    <ol style="list-style-type:square ">
                        <li><span class="label label-important">Cellphone</span> must be unique.</li>
                        <br />
                        <li>Click <a href="#myModal" data-toggle="modal">here</a> to learn more about <span class="label label-important">Roles</span> the system currently suppots.</li>
                    </ol>
            </p>
        </div>        
    </div>  
</div>
{% block modal_info %}
         {% render url('vanessa_core_site_info_roles') %}  
{% endblock modal_info %}

{% endblock body %}
