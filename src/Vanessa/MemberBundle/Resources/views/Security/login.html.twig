{% extends "VanessaMemberBundle::layout.html.twig" %}
{% block title %}Welcome, please login{% endblock %}

{% block body %}
<div class="row">
    <div class="span12">
        <h3 class="align_header">Please Login</h3>
           <br />
    </div>  
</div>
<div class="row">
   <div class="span9">
       <div class="shift_30">
            {% block alert %}
                {% include "::alert.html.twig" %}
            {% endblock %} 
            {% if error %}
            <div class="alert alert-error">
                <button class="close" data-dismiss="alert">Ã—</button>
                <h4 class="alert-heading">Warning!</h4>
                Your username and password are invalid, please try again or contact support.
            </div>
            {% endif %}
       </div>
       {% include "VanessaMemberBundle:Security:form.login.html.twig" %}        
   </div>    
   <div class="span3 pull-right">
        <div class="well well-hint">
            <h4><i class="icon-info-sign icon-white"></i>&nbsp; Having login trouble? </h4>
            <br />
            <p class="pull-right">
                    <ol style="list-style-type:none ">
                        <li>Please provide the <span class="label label-important">Email address</span> and <span class="label label-important">Password</span> combination you used when creating the account.</li>
                        <li><br /><a href="{{ path('vanessa_member_reset_password_rest') }}.html" title="Forgot your password? Let us help you recover it.">Forgot password ?</a></li>
                    </ol>
            </p>
        </div>        
    </div>
</div>
{% endblock body %}
