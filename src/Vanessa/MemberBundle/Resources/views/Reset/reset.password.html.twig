{% extends "VanessaMemberBundle::layout.html.twig" %}

{% block title %}Reset password{% endblock %}

{% block body %}
<div class="row">
    <div class="span12">
        <h3 class="align_header">Reset password</h3>
           <br />
    </div>  
</div>
<div class="row">
    <div class="span9">
         {% include "VanessaMemberBundle:Reset:form.reset.password.request.html.twig" %}
    </div> 
    <div class="span3 pull-right">
         <div class="well well-hint">
             <h4><i class="icon-info-sign icon-white"></i>&nbsp; Reset trouble? </h4>
             <br />
             <p class="pull-right">
                 <ol>
                     <li>Provide a valid <span class="label label-important">Email address</span>.</li>
                     <br />
                     <li>Fill in <span class="label label-important">Recaptcha </span> field or reload it if you cannot read the cryptic text.</li>
                 </ol>
            </p>
         </div>         
     </div>         
</div>
{% endblock body %}
