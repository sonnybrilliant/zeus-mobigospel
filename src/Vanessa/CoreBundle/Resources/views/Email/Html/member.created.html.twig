{% extends "::base.mail.html.twig" %}
{% block body %}
    <table width="100%">
        <tr>
            <td style="font-family:Arial,Helvetica,sans-serif;font-size:15px;color:#FFF;padding-left:15px;padding-right:15px;padding-top:10px;padding-bottom:10px;text-align:center; background-color:#176ACE;border:1px solid #777;">
                <font size="+2">Account Created</font>
            </td>
        </tr>
    </table><br /><br />
    <p style="margin-bottom: 6pt;">Hi {{ fullName }},</p>
    <p style="margin-bottom: 6pt;">Use the following details to manage your account for <strong>{{ agency }}</strong>:<br /></p>
    <p style="margin-bottom: 6pt;"><strong>Email address</strong>: {{ email }} <br /> <strong>Password</strong>: {{ password }} <br /></p>                                         
    <p style="margin-bottom: 6pt;">
        Follow the link below to login to your account.<br /><a style="color: #006699;" href="{{ link }}">{{ link }}</a>
    </p>
{% endblock body %}
