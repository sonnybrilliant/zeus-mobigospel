{% extends "::base.mail.html.twig" %}
{% block body %}
    <table width="100%">
        <tr>
            <td style="font-family:Arial,Helvetica,sans-serif;font-size:15px;color:#FFF;padding-left:15px;padding-right:15px;padding-top:10px;padding-bottom:10px;text-align:center; background-color:#F61B23;border:1px solid #777;">
                <font size="+2">SMS Incoming error </font>
            </td>
        </tr>
    </table><br /><br />
    <p style="margin-bottom: 6pt;">Hi {{ fullName }},</p>
    <p style="margin-bottom: 6pt;">There was an error with an incoming sms, please have a look.</p>
    <p style="margin-bottom: 6pt;"><strong>Msisdn</strong>: {{message.msisdn}} </p>                                         
    <p style="margin-bottom: 6pt;"><strong>Content</strong>: {{message.content}} </p>                                         
    <p style="margin-bottom: 6pt;"><strong>Error</strong>:<br /> {{message.error}} </p>                                         
{% endblock body %}
